<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ButtonsContainer">
        <attr name="topButtonText"
            format="string" />
        <attr name="bottomButtonBackgroundColor"
            format="color" />
        <attr name="bottomButtonText"
            format="string" />
        <attr name="topButtonBackgroundColor"
            format="color" />
    </declare-styleable>

    <!-- Добавили атрибут для стиля -->
    <attr name="buttonsContainerStyle"
        format="reference" />

    <!-- Стиль ButtonsContainer для светлой темы -->
    <style name="DayButtonsContainerStyle">
        <item name="topButtonBackgroundColor">#3F51B5</item>
        <item name="bottomButtonBackgroundColor">#FFC107</item>
    </style>

    <!-- Стиль ButtonsContainer по умолчанию (обе кнопки розовые) -->
    <style name="DefaultButtonsContainerStyle">
        <item name="topButtonBackgroundColor">#9C27B0</item>
        <item name="bottomButtonBackgroundColor">#9C27B0</item>
    </style>
</resources>